{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex-M semihosting",
            "type": "gdb-debug",
            "request": "launch",
            "runToMain": false,
            "program": "${workspaceFolder}/software-AC6/hello.axf",
            "gdbServerPort": "<port:31627>",
            "gdbServer": "${workspaceFolder}/system/Linux64-Release-GCC-7.3/isim_system",
            "gdbServerArguments": [
                "-f",
                "${workspaceFolder}/params.txt",
                "--allow-debug-plugin",
                "--plugin",
                "${env:HOME}/GDBRemoteConnection.so"
            ],
            "launchRegex": "GDBServer: Listening"
        }
    ]
}

